@page "/timesheets"
@rendermode InteractiveServer

@using Timesheet.Domain.Entities
@using Timesheet.Application.Interfaces
@inject ITimesheetService TimesheetService

<h1 class="mb-4">Timesheet Selector</h1>

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">@successMessage</div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Select user and week</h5>

        <div class="alert alert-info py-2">
            Any date you choose will automatically snap to the Monday of that week.
        </div>

        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">User Id</label>
                <input type="text" class="form-control" @bind="selectedUserId" />
            </div>

            <div class="col-md-3">
                <label class="form-label">Week start (any date)</label>
                <input type="date" class="form-control" @bind="weekStart" />
            </div>

            <div class="col-md-3">
                <button class="btn btn-primary" @onclick="LoadEntries">Load week</button>
            </div>
        </div>

        @if (weekAdjustedMessage is not null)
        {
            <div class="alert alert-warning mt-3 py-2">
                @weekAdjustedMessage
            </div>
        }
    </div>
</div>

@if (entries.Any())
{
    <h4 class="mt-3">
        Week of @weekStart.ToString("dd MMM yyyy")
        →
        @weekStart.AddDays(6).ToString("dd MMM yyyy")
    </h4>
}

<div class="row">
    <div class="col-lg-6">
        @if (isEditing)
        {
            <div class="card mb-4 border-warning">
                <div class="card-body">
                    <h5 class="card-title text-warning">Edit entry</h5>

                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Project Id</label>
                            <input type="text" class="form-control" @bind="editEntry.ProjectId" />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Date</label>
                            <input type="date" class="form-control" @bind="editDate" />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Hours</label>
                            <input type="number" step="0.5" class="form-control" @bind="editEntry.Hours" />
                        </div>
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Description</label>
                        <input type="text" class="form-control" @bind="editEntry.Description" />
                    </div>

                    <button class="btn btn-warning mt-3 me-2" @onclick="SaveEdit">Save Changes</button>
                    <button class="btn btn-secondary mt-3" @onclick="CancelEdit">Cancel</button>
                </div>
            </div>
        }
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Weekly totals per project</h5>

        @if (!entries.Any())
        {
            <p class="text-muted">No entries for this user and week.</p>
        }
        else
        {
            <table class="table table-sm mt-3">
                <thead>
                    <tr>
                        <th>Project</th>
                        <th>Total hours</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var summary in projectSummaries)
                    {
                        <tr>
                            <td>@summary.ProjectId</td>
                            <td>@summary.TotalHours</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

<h4 class="mt-4">Entries for selected week</h4>

@if (!entries.Any())
{
    <p class="text-muted">No entries yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Project</th>
                <th>Hours</th>
                <th>Description</th>
                <th style="width: 140px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in entries)
            {
                <tr class="week-highlight">
                    <td>@e.Date</td>
                    <td>@e.ProjectId</td>
                    <td>@e.Hours</td>
                    <td>@e.Description</td>
                    <td>
                        <button class="btn btn-sm btn-primary me-1" @onclick="() => BeginEdit(e)">Edit</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteEntry(e.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private string selectedUserId = "1";
    private DateOnly weekStart = DateOnly.FromDateTime(DateTime.Today);
    private string? weekAdjustedMessage;

    private bool isEditing = false;
    private TimesheetEntry? editEntry;
    private DateOnly editDate;

    private List<TimesheetEntry> entries = new();
    private string? errorMessage;
    private string? successMessage;

    private record ProjectSummary(string ProjectId, decimal TotalHours);
    private List<ProjectSummary> projectSummaries = new();

    private async Task ShowSuccess(string message)
    {
        successMessage = message;
        await Task.Delay(2000);
        successMessage = null;
        StateHasChanged();
    }

    private void LoadEntries()
    {
        errorMessage = null;
        weekAdjustedMessage = null;

        var original = weekStart;

        weekStart = SnapToMonday(weekStart);

        if (weekStart != original)
        {
            weekAdjustedMessage =
                $"Week start adjusted to Monday: {weekStart:dd MMM yyyy}.";
        }

        entries = TimesheetService
            .GetEntriesForWeek(selectedUserId, weekStart)
            .ToList();

        projectSummaries = entries
            .GroupBy(e => e.ProjectId)
            .Select(g => new ProjectSummary(g.Key, g.Sum(e => e.Hours)))
            .OrderBy(s => s.ProjectId)
            .ToList();
    }

    private DateOnly SnapToMonday(DateOnly date)
    {
        int diff = (int)date.DayOfWeek - (int)DayOfWeek.Monday;
        if (diff < 0)
        {
            diff += 7;
        }

        return date.AddDays(-diff);
    }

    private void BeginEdit(TimesheetEntry entry)
    {
        isEditing = true;
        editEntry = new TimesheetEntry
        {
            Id = entry.Id,
            UserId = entry.UserId,
            ProjectId = entry.ProjectId,
            Date = entry.Date,
            Hours = entry.Hours,
            Description = entry.Description
        };

        editDate = entry.Date;
    }

    private async Task SaveEdit()
    {
        if (editEntry is null)
            return;

        errorMessage = null;

        editEntry.Date = editDate;

        try
        {
            TimesheetService.Update(editEntry);
            isEditing = false;
            LoadEntries();
            await ShowSuccess("Updated!");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    private void CancelEdit()
    {
        isEditing = false;
        editEntry = null;
    }

    private async Task DeleteEntry(Guid id)
    {
        errorMessage = null;

        try
        {
            TimesheetService.Delete(id);
            LoadEntries();
            await ShowSuccess("Deleted!");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }
}